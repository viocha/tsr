{
  "name": "@viocha/tsr",
  "version": "0.2.1",
  "type": "module",
  "description": "A simple TypeScript Node.js runner",
  "files": [
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viocha/tsr.git"
  },
  "bin": {
    "tsr": "index.js"
  },
  "scripts": {
    "test:run": "node index.js test/test.ts",
    "test:run:installed": "tsr test/test.ts",
    "test:build": "node index.js build test/test.ts -o test/out/test.js",
    "pub": "npm publish --access public",
    "pub:dry": "npm publish --dry-run --access public"
  },
  "keywords": [
    "typescript",
    "node",
    "runner"
  ],
  "author": "viocha",
  "license": "MIT",
  "dependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "commander": "^14.0.0",
    "rollup": "^4.41.0",
    "tmp": "^0.2.3",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  }
}
